<%= search_form_for @q, :class => collapse_search_form, :id => "agenda_items_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :start_time, "Start time" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='start_timegteqPicker' data-target-input="nearest">
          <%= f.text_field :start_time_gteq, :class => "form-control datetimepicker-input", :placeholder => "Start time greater than or equal to", :data => {:target => '#start_timegteqPicker'} %>
          <div class="input-group-append" data-target='#start_timegteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='start_timelteqPicker' data-target-input="nearest">
          <%= f.text_field :start_time_lteq, :class => "form-control datetimepicker-input", :placeholder => "Start time less than or equal to", :data => {:target => '#start_timelteqPicker'} %>
          <div class="input-group-append" data-target='#start_timelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#start_timegteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#start_timelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#start_timegteqPicker').on("dp.change", function (e) {
              $('#start_timelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#start_timelteqPicker').on("dp.change", function (e) {
              $('#start_timegteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

