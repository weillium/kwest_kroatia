<div class="card mb-3">
  <h2 class="card-header h4">
    Agenda Item #<%= agenda_item.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Start time</dt>
      <dd><%= agenda_item.start_time %></dd>

      <dt>End time</dt>
      <dd><%= agenda_item.end_time %></dd>

      <dt>Location</dt>
      <dd>
        <div>
          <%= render partial: "agenda_items/one_photo_map" %>
        </div>
      </dd>

      <dt>Activity</dt>
      <dd><%= agenda_item.activity %></dd>

      <dt>Description</dt>
      <dd><%= agenda_item.description %></dd>

      <dt>Photo</dt>
      <dd>
        <%= cl_image_tag @agenda_item.photo, class: "img-fluid" %>
      </dd>

      <dt>Leader</dt>
      <dd>
        <% if @agenda_item.leader.present? %>
          <%= link_to agenda_item.leader, agenda_item.leader %>
        <% end %>
      </dd>

      <dt>Is cyoa</dt>
      <dd><%= agenda_item.is_cyoa %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back agenda_item, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_agenda_item_url(agenda_item), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to agenda_item, method: :delete, data: { confirm: "Do you really want to delete this agenda_item?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(agenda_item.updated_at) %> ago
  </div>
</div>
