<div class="row mb-3">
  <div class="col-md-12">
    <h1 class="display-4">
      Agenda Items

      <%= link_to new_agenda_item_path, class: "btn btn-lg btn-outline-secondary" do %>
        <i class="fas fa-plus fa-fw"></i>
      <% end %>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "agenda_items/agenda_items_search_form" %>
  </div>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <%= render partial: "agenda_items/all_photos_map" %>
  </div>
</div>


<div class="row justify-content-center mb-3">
  <div class="col-md-8">
    <div class="card">
      <h1 class="card-header h4 d-flex align-items-center justify-content-between">
        Agenda Items

        <%= link_to new_agenda_item_path, class: "btn btn-sm btn-outline-secondary" do %>
          <i class="fas fa-plus fa-fw"></i>
        <% end %>
      </h1>

      <div class="list-group list-group-flush">
        <%= render collection: @agenda_items, partial: "list_item", as: :agenda_item %>
      </div>
      <div class="card-footer d-flex justify-content-center">
        <%= paginate @agenda_items, theme: 'twitter-bootstrap-4' %>
      </div>

    </div>
  </div>
</div>
