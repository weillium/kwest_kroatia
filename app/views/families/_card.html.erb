<div class="card mb-3">
  <h2 class="card-header h4">
    Family #<%= family.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= family.name %></dd>

      <dt>Crest</dt>
      <dd>
        <%= cl_image_tag @family.crest, class: "img-fluid" %>
      </dd>

      <dt>Motto</dt>
      <dd><%= family.motto %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back family, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_family_url(family), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to family, method: :delete, data: { confirm: "Do you really want to delete this family?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(family.updated_at) %> ago
  </div>
</div>
