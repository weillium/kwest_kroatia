<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Scores

    <a data-toggle="collapse" href="#family_scores_new_form">
      Add score
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @family.scores.each do |score| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to score, score %>

        <%= link_to score, method: :delete, data: { confirm: "Do you really want to delete this score" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="family_scores_new_form">
        <%= render partial: "families/family_scores_new_form" %>
      </div>
    </div>

  </ul>
</div>
