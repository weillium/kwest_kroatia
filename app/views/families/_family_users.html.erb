<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Users

    <a data-toggle="collapse" href="#family_users_new_form">
      Add user
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @family.users.each do |user| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to user, user %>

        <%= link_to user, method: :delete, data: { confirm: "Do you really want to delete this user" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="family_users_new_form">
        <%= render partial: "families/family_users_new_form" %>
      </div>
    </div>

  </ul>
</div>
