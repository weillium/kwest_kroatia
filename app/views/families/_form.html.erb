<% was_validated = family.errors.any? %>

<%= form_with(model: family, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = family.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% family.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% crest_class = "form-control" %>
    <% crest_was_invalid = family.errors.include?(:crest) %>

    <% if was_validated %>
      <% if crest_was_invalid %>
        <% crest_class << " is-invalid" %>
      <% else %>
        <% crest_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :crest %>
    <%= f.file_field :crest, class: "form-control" %>
    <% if crest_was_invalid %>
      <% family.errors.full_messages_for(:crest).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% motto_class = "form-control" %>
    <% motto_was_invalid = family.errors.include?(:motto) %>

    <% if was_validated %>
      <% if motto_was_invalid %>
        <% motto_class << " is-invalid" %>
      <% else %>
        <% motto_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :motto %>
    <%= f.text_area :motto, class: motto_class, placeholder: "Enter motto" %>
    <% if motto_was_invalid %>
      <% family.errors.full_messages_for(:motto).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
